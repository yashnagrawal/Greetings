<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalletActivity">


  <Button
      android:id="@+id/btn_die"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minHeight="157dp"
      android:minWidth="152dp"
      android:layout_marginTop="16sp"
      android:gravity="center"
      android:textSize="50sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.918"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txt_prev_roll" />

  <TextView
      android:id="@+id/txt_total_rolls"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="172dp"
      android:gravity="right"
      android:text="@string/totalDiceRollsText"
      app:layout_constraintEnd_toStartOf="@+id/btn_die"
      app:layout_constraintTop_toTopOf="@+id/txt_single_sixes" />

  <TextView
      android:id="@+id/txt_double_others"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:text="@string/doubleOthersText"
      app:layout_constraintEnd_toEndOf="@+id/txt_total_rolls"
      app:layout_constraintTop_toTopOf="@+id/txt_double_sixes" />

  <TextView
      android:id="@+id/txt_double_sixes"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8sp"
      android:gravity="left"
      android:text="@string/doubleSixesText"
      app:layout_constraintEnd_toStartOf="@+id/txt_double_others"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/txt_single_sixes"
      app:layout_constraintTop_toBottomOf="@+id/txt_single_sixes" />

  <TextView
      android:id="@+id/txt_single_sixes"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="96sp"

      android:layout_marginTop="60sp"
      android:gravity="left"
      android:text="@string/sixesRolledText"
      app:layout_constraintEnd_toStartOf="@+id/txt_total_rolls"
      app:layout_constraintHorizontal_bias="0.45"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/gameDetails" />

  <TextView
      android:id="@+id/gameDetails"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="60sp"
      android:layout_marginTop="36sp"

      android:gravity="center"
      android:text="@string/gameDetails"
      app:layout_constraintEnd_toStartOf="@+id/txt_coins"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/txt_prev_roll"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12sp"
      android:gravity="center"
      android:text="@string/previousRollText"
      app:layout_constraintEnd_toEndOf="@+id/txt_coins"
      app:layout_constraintHorizontal_bias="0.489"
      app:layout_constraintStart_toStartOf="@+id/txt_coins"
      app:layout_constraintTop_toBottomOf="@+id/txt_coins" />

  <TextView
      android:id="@+id/txt_coins"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="52sp"
      android:layout_marginEnd="108dp"
      android:gravity="center"
      android:text="@string/coinsText"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>